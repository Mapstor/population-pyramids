{
  "framework": "nextjs",
  "buildCommand": "NODE_OPTIONS='--max-old-space-size=7168' npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=7168"
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=7168",
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  }
}